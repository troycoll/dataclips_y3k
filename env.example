# Database Configuration
# PostgreSQL Settings (for long-term storage) - REQUIRED
DATABASE_URL=postgres://username:password@localhost:5432/dataclips_y3k_development

# Connection Pool Settings
DB_MAX_CONNECTIONS=10

# SQLite Cache Configuration (for dataclip result caching)
# Enable/disable SQLite in-memory caching for dataclip results
DATACLIP_CACHE_ENABLED=true

# Default cache TTL in seconds (3600 = 1 hour)
DATACLIP_CACHE_TTL=3600

# Maximum number of cache entries before cleanup
DATACLIP_CACHE_MAX_ENTRIES=1000

# Cache cleanup interval in seconds (300 = 5 minutes)
DATACLIP_CACHE_CLEANUP_INTERVAL=300

# Enable cache statistics collection
DATACLIP_CACHE_STATS_ENABLED=true

# Schema Cache Configuration (for database schema caching)
# Enable/disable SQLite in-memory caching for schema results
SCHEMA_CACHE_ENABLED=true

# Default schema cache TTL in seconds (7200 = 2 hours, schemas change less frequently)
SCHEMA_CACHE_TTL=7200

# Maximum number of schema cache entries (fewer needed as schemas change rarely)
SCHEMA_CACHE_MAX_ENTRIES=100

# Heroku API Configuration
# API token for accessing Heroku Platform API
# Get your token from: https://dashboard.heroku.com/account
HEROKU_API_TOKEN=your-heroku-api-token-here

# Note: HEROKU_APP_NAME is automatically provided by Heroku and does not need to be set manually

# Logging
LOG_LEVEL=info
RACK_ENV=development

